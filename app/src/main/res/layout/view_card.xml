<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/cardView"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/card_margin"
    card_view:cardCornerRadius="@dimen/cardCornerRadius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/card_thumbnail"
            android:layout_width="@dimen/thumbnail_size"
            android:layout_height="@dimen/thumbnail_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/card_thumbnail_text"
            android:layout_width="@dimen/thumbnail_size"
            android:layout_height="@dimen/thumbnail_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/card_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/subtitle_marginTop"
            android:layout_marginStart="@dimen/subtitle_marginLeft"
            android:layout_marginLeft="@dimen/subtitle_marginLeft"
            android:layout_marginRight="@dimen/subtitle_marginRight"
            android:layout_marginEnd="@dimen/subtitle_marginRight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/card_thumbnail"
            android:layout_toLeftOf="@id/card_thumbnail"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/subtitle"
            android:textSize="@dimen/subtitle_size"/>
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/title_marginLeft"
            android:layout_marginLeft="@dimen/title_marginLeft"
            android:layout_marginRight="@dimen/title_marginRight"
            android:layout_marginEnd="@dimen/title_marginRight"
            android:layout_marginTop="@dimen/title_marginTop"
            android:layout_below="@+id/card_subtitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/card_thumbnail"
            android:layout_toLeftOf="@id/card_thumbnail"
            android:textColor="@color/colorAccent"
            android:text="@string/title"
            android:textSize="@dimen/title_size"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>